<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <title>timer</title>

        <!-- Viewport settings for Bootstrap -->
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">

        <!-- Stylesheets -->
        <link href="css/bootstrap.min.css" media="screen" rel="stylesheet" type="text/css">
        <link href="css/bootstrap-theme.min.css" media="screen" rel="stylesheet" type="text/css">
        <!--<link href="css/timer.css" media="screen" rel="stylesheet" type="text/css">-->
        
        <!-- Scripts -->
        <!--[if lt IE 9]><script type="text/javascript" src="/js/html5shiv.js"></script><![endif]-->
        <!--[if lt IE 9]><script type="text/javascript" src="/js/respond.min.js"></script><![endif]-->
        <script src="js/jquery.min.js"></script>
        <script src="js/bootstrap.min.js"></script>
        <script src="js/modernizr-custom.min.js"></script>
        <script src="js/TimerClass.js"></script>
        <script src="js/TimerCollectionClass.js"></script>
        <script src="js/timer.js"></script>
    </head>
    <body>
        <main class="container">
            <div class="row"
        </main>


        <div id="pnlStart" class="start">
            Time Between (in minutes): <input type="text" id="txtTimeOffset" value="1">
            
            Enter Description 1: <input type="text" id="txtDescription1">
            Enter Duration (in minutes): <input type="text" id="txtDuration1">
            <button onclick="setTimer('#lblCountDown1', '#txtDuration1', this)">Start!</button>
            
            Enter Description 2: <input type="text" id="txtDescription2">
            Enter Duration (in minutes): <input type="text" id="txtDuration2">
            <button onclick="setTimer('#lblCountDown2', '#txtDuration2', this)">Start!</button>
            
            Enter Description 3: <input type="text" id="txtDescription3">
            Enter Duration (in minutes): <input type="text" id="txtDuration3">
            <button onclick="setTimer('#lblCountDown3', '#txtDuration3', this)">Start!</button>
        </div>
        <div id="pnlTimer1" class="bottomright">
            <span id="lblDescription1" class="description"></span>
            <div id="upnlCountDown1">
                <span id="lblCountDown1" class="timer"></span>
            </div>
        </div>
        <div id="pnlTimer2" class="bottomright">
            <span id="lblDescription2" class="description"></span>
            <div id="upnlCountDown2">
                <span id="lblCountDown2" class="timer"></span>
            </div>
        </div>
        <div id="pnlTimer3" class="bottomright">
            <span id="lblDescription3" class="description"></span>
            <div id="upnlCountDown3">
                <span id="lblCountDown3" class="timer"></span>
            </div>
        </div>
        <script>
            // Give the timeoffset textbox focus and select contents
            $('#txtTimeOffset').focus();
            $('#txtTimeOffset').select();
        </script>
    </body>
</html>
